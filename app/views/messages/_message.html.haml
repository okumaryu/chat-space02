.chat-main__message-list__box{data: {message: {id: message.id}}}
  .chat-main__message-list__box__small
    .chat-main__message-list__box__small__user
      = message.user.name
    .chat-main__message-list__box__small__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__box__message
    - if message.content.present?
      %p.chat-main__message-list__box__message__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__box__image' if message.image.present?

