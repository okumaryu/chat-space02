.chat-main
  .chat-main__group-info
    .chat-main__left-box
      .chat-main__left-box__group-name
        = @group.name
      .chat-main__left-box__member
        member:
        - @group.users.each do  |user|
          =  user.name
    .chat-main__right-box
      .chat-main__right-box__icon
        = link_to edit_group_path(@group), class: "Edit__btn" do
          Edit

  .chat-main__message-list
    =render @messages

        
